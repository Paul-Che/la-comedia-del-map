<div class="container">
  <div class="wrapper">
    <ul>
      <% @actors.each do |actor| %>
        <div class="card">
          <ul class='list-unstyled list-inline'>
            <li><%= actor.first_name %></li>
            <li><%= link_to 'show', play_path(actor) %></li>
            <li><%= link_to 'edit', edit_admin_actor_path(actor) %></li>
            <li><%= link_to 'delete', admin_actor_path(actor) %></li>
          </ul>
        </div>
      <% end %>
    </ul>
  </div>
</div>
